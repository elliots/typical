{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "lib": ["ES2024"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "samples",
    "test/integration",
    "test/output",
    "test/fixtures",
    "packages",
    "bench",
    "tmp",
    "docs"
  ]
}
