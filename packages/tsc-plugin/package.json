{
  "name": "@elliots/typical-tsc-plugin",
  "version": "0.3.0",
  "description": "TSC plugin for typical - runtime safe TypeScript transformer",
  "keywords": [
    "runtime",
    "transformer",
    "ts-patch",
    "tsc",
    "typescript",
    "typical",
    "validation"
  ],
  "homepage": "https://github.com/elliots/typical#readme",
  "bugs": {
    "url": "https://github.com/elliots/typical/issues"
  },
  "license": "MIT",
  "author": "Elliot Shepherd <elliot@jarofworms.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliots/typical.git",
    "directory": "packages/tsc-plugin"
  },
  "bin": {
    "ttsc": "bin/ttsc"
  },
  "files": [
    "bin",
    "dist",
    "src/patch-tsconfig.cjs"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@elliots/typical": "workspace:*",
    "deasync": "0.1.31",
    "strip-json-comments": "5.0.3"
  },
  "devDependencies": {
    "@types/deasync": "0.1.5",
    "@types/node": "^22.0.0",
    "tsdown": "^0.18.3"
  },
  "peerDependencies": {
    "ts-patch": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
